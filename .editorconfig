# --- START OF REVISED FILE .editorconfig ---
# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{go}]
indent_size = 4

[*.{md,yaml,yml,json}]
indent_size = 2

[Makefile]
indent_style = tab

# --- END OF REVISED FILE .editorconfig ---